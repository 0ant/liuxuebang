<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
 xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_actionbar"
    
    android:gravity="center_vertical" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/actionbar_icon_weight"
        android:layout_height="match_parent"
       android:src="@drawable/ic_back"
       style="@style/Widget.Liuxue.ActionBar.ImageButton"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="登陆/注册"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white" />
</FrameLayout>

