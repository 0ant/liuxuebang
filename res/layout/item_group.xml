<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/write_light"

    android:paddingLeft="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:src="@drawable/material_group_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
	    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
       >
        <TextView
            android:id="@+id/nikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新发表帖子的标题" />
        <ImageView
        android:id="@+id/officer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:src="@drawable/ic_officer" />
        <ImageView
        android:id="@+id/hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:src="@drawable/ic_hot" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法国留学帮"
            android:textColor="@color/grey_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_people" />

            <TextView
                android:id="@+id/memnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12321"
                android:textColor="@color/grey_light" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/jionorout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/material_group_join"
        style="@style/Widget.Liuxue.ActionBar.ImageButton.WriteGreen"
    />

</LinearLayout>